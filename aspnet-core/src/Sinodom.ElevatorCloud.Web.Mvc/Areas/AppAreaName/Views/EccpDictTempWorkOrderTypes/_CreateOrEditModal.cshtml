@using Sinodom.ElevatorCloud.EccpDict
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.Common.Modals
@model Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.EccpDictTempWorkOrderTypes.CreateOrEditEccpDictTempWorkOrderTypeViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? L("EditEccpDictTempWorkOrderType") : L("CreateNewEccpDictTempWorkOrderType")))

<div class="modal-body">
    <div id="EccpDictTempWorkOrderTypeInformationsTab">
        <form name="EccpDictTempWorkOrderTypeInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.EccpDictTempWorkOrderType.Id"/>
            }


            <div class="form-group">
                <label for="EccpDictTempWorkOrderType_Name">@L("Name")</label>
                <input class="form-control" id="EccpDictTempWorkOrderType_Name" value="@Model.EccpDictTempWorkOrderType.Name" type="text" name="name" required maxlength="@EccpDictTempWorkOrderTypeConsts.MaxNameLength" minlength="@EccpDictTempWorkOrderTypeConsts.MinNameLength"/>
            </div>


        </form>
    </div>
</div>

@(await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml"))