@using Sinodom.ElevatorCloud.Authorization
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Startup
@model Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.EccpMaintenanceContracts.EccpMaintenanceContractsViewModel
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Tenant.EccpMaintenanceContracts;
}

@section Scripts
    {
    <script abp-src="/view-resources/Areas/AppAreaName/Views/EccpMaintenanceContracts/Index.js" asp-append-version="true"></script>
}

<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("EccpMaintenanceContracts")</span>
            </h3>
            <span class="m-section__sub">
                @L("EccpMaintenanceContractsHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            @if (IsGranted(AppPermissions.Pages_Administration_EccpMaintenanceContracts_Create))
            {
                <button id="CreateNewEccpMaintenanceContractButton" class="btn btn-primary blue">
                    <i class="fa fa-plus"></i> @L("CreateNewEccpMaintenanceContract")
                </button>
            }
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right">
                <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input type="text" id="EccpMaintenanceContractsTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetEccpMaintenanceContractsButton" class="btn btn-primary" type="submit">
                                        <i class="flaticon-search-1"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row m--margin-bottom-10">
                <div class="col-md-12">
                    <div class="m-separator m-separator--dashed"></div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="MinStartDateFilterId">@L("MinMax") @L("StartDate")</label>
                        <div class="input-group">
                            <input class="form-control m-input date-picker" type="text" placeholder="@L("MinValue")" id="MinStartDateFilterId">
                            <input class="form-control m-input date-picker" type="text" placeholder="@L("MaxValue")" id="MaxStartDateFilterId">
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="MinEndDateFilterId">@L("MinMax") @L("EndDate")</label>
                        <div class="input-group">
                            <input class="form-control m-input date-picker" type="text" placeholder="@L("MinValue")" id="MinEndDateFilterId">
                            <input class="form-control m-input date-picker" type="text" placeholder="@L("MaxValue")" id="MaxEndDateFilterId">
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="ECCPBaseMaintenanceCompanyNameFilterId">(@L("ECCPBaseMaintenanceCompany")) @L("Name")</label>
                        <input type="text" class="form-control" name="eCCPBaseMaintenanceCompanyNameFilter" id="ECCPBaseMaintenanceCompanyNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="ECCPBasePropertyCompanyNameFilterId">(@L("ECCPBasePropertyCompany")) @L("Name")</label>
                        <input type="text" class="form-control" name="eCCPBasePropertyCompanyNameFilter" id="ECCPBasePropertyCompanyNameFilterId">
                    </div>
                </div>

            </div>
            <div class="row m--margin-bottom-10">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                        <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")
                    </span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                        <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")
                    </span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="EccpMaintenanceContractsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("ContractPictureDesc")</th>
                            <th>@L("StartDate")</th>
                            <th>@L("EndDate")</th>
                            <th>@L("ECCPBaseMaintenanceCompanyName")</th>
                            <th>@L("ECCPBasePropertyCompanyName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>