@using Sinodom.ElevatorCloud.Authorization
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.EccpBaseSaicUnits
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Startup
@model EccpBaseSaicUnitsViewModel
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Common.EccpBaseSaicUnits;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/AppAreaName/Views/EccpBaseSaicUnits/Index.js" asp-append-version="true"></script>
}
<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("EccpBaseSaicUnits")</span>
            </h3>
            <span class="m-section__sub">
                @L("EccpBaseSaicUnitsHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            @if (IsGranted(AppPermissions.Pages_Administration_EccpBaseSaicUnits_Create))
            {
                <button id="CreateNewEccpBaseSaicUnitButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewEccpBaseSaicUnit")</button>
            }
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
			<div class="m-form m-form--label-align-right">
			   <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input type="text" id="EccpBaseSaicUnitsTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetEccpBaseSaicUnitsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row m--margin-bottom-10">
                    <div class="col-md-12">
						<div class="m-separator m-separator--dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="NameFilterId">@L("Name")</label>
									<input type="text" class="form-control" name="nameFilter" id="NameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="AddressFilterId">@L("Address")</label>
									<input type="text" class="form-control" name="addressFilter" id="AddressFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="TelephoneFilterId">@L("Telephone")</label>
									<input type="text" class="form-control" name="telephoneFilter" id="TelephoneFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
                                    <label for="ECCPBaseAreaNameFilterId">(@L("Province")) @L("Name")</label>
									<input type="text" class="form-control" name="eccpBaseAreaNameFilter" id="ECCPBaseAreaNameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
                                    <label for="ECCPBaseAreaName2FilterId">(@L("City")) @L("Name")</label>
									<input type="text" class="form-control" name="eccpBaseAreaName2Filter" id="ECCPBaseAreaName2FilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
                                    <label for="ECCPBaseAreaName3FilterId">(@L("Area")) @L("Name")</label>
									<input type="text" class="form-control" name="eccpBaseAreaName3Filter" id="ECCPBaseAreaName3FilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
                                    <label for="ECCPBaseAreaName4FilterId">(@L("Street")) @L("Name")</label>
									<input type="text" class="form-control" name="eccpBaseAreaName4Filter" id="ECCPBaseAreaName4FilterId">
								</div>
                            </div>

                </div>
                <div class="row m--margin-bottom-10">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="EccpBaseSaicUnitsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("Name")</th>
                            <th>@L("Address")</th>
                            <th>@L("Telephone")</th>
                            <th>@L("ProvinceName")</th>
                            <th>@L("CityName")</th>
                            <th>@L("AreaName")</th>
                            <th>@L("StreetName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>