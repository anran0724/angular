                <label> @Model.EccpDictMaintenanceItem.DisOrder</label>
            </div>
            <div class="m-separator m-separator--dashed"></div>
            <div class="m-stack__item m-stack__item--center m-stack__item--middle">
                <h6>@L("TermDesc") :</h6>
                <label> @Model.EccpDictMaintenanceItem.TermDesc</label>
