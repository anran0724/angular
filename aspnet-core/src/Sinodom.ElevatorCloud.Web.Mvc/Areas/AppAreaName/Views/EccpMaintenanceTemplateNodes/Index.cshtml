@using Sinodom.ElevatorCloud.Authorization
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Startup
@model Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.EccpMaintenanceTemplateNodes.EccpMaintenanceTemplateNodesViewModel
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Common.EccpMaintenanceTemplateNodes;
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/AppAreaName/Views/EccpMaintenanceTemplateNodes/Index.js" asp-append-version="true"></script>
}

<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("EccpMaintenanceTemplateNodes")</span>
            </h3>
            <span class="m-section__sub">
                @L("EccpMaintenanceTemplateNodesHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            @if (IsGranted(AppPermissions.Pages_EccpMaintenance_EccpMaintenanceTemplateNodes_Create))
            {
                <button id="CreateNewEccpMaintenanceTemplateNodeButton" class="btn btn-primary blue">
                    <i class="fa fa-plus"></i> @L("CreateNewEccpMaintenanceTemplateNode")</button>
            }
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right">
                <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input type="text" id="EccpMaintenanceTemplateNodesTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetEccpMaintenanceTemplateNodesButton" class="btn btn-primary" type="submit">
                                        <i class="flaticon-search-1"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row m--margin-bottom-10">
                <div class="col-md-12">
                    <div class="m-separator m-separator--dashed"></div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="NodeNameFilterId">@L("NodeName")</label>
                        <input type="text" class="form-control" name="nodeNameFilter" id="NodeNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="MinNodeIndexFilterId">@L("MinMax") @L("NodeIndex")</label>
                        <div class="input-group">
                            <input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minNodeIndexFilter" id="MinNodeIndexFilterId"/>
                            <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxNodeIndexFilter" id="MaxNodeIndexFilterId"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="ActionCodeFilterId">@L("ActionCode")</label>
                        <input type="text" class="form-control" name="actionCodeFilter" id="ActionCodeFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="EccpMaintenanceTemplateTempNameFilterId">(@L("EccpMaintenanceTemplate")) @L("TempName")</label>
                        <input type="text" class="form-control" name="eccpMaintenanceTemplateTempNameFilter" id="EccpMaintenanceTemplateTempNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="EccpDictNodeTypeNameFilterId">(@L("EccpDictNodeType")) @L("Name")</label>
                        <input type="text" class="form-control" name="eccpDictNodeTypeNameFilter" id="EccpDictNodeTypeNameFilterId">
                    </div>
                </div>

            </div>
            <div class="row m--margin-bottom-10">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                        <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                        <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="EccpMaintenanceTemplateNodesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                    <tr>
                        <th>@L("Actions")</th>
                        <th>@L("NodeName")</th>
                        <th>@L("NodeIndex")</th>
                        <th>@L("ActionCode")</th>
                        <th>@L("EccpMaintenanceTemplateTempName")</th>
                        <th>@L("EccpDictNodeTypeName")</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>