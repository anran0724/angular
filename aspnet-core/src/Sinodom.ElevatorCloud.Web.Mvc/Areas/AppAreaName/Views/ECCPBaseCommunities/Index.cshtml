@using Sinodom.ElevatorCloud.Authorization
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Startup
@model Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.ECCPBaseCommunities.ECCPBaseCommunitiesViewModel
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Host.ECCPBaseCommunities;
}

@section Scripts
    {
    <script abp-src="/view-resources/Areas/AppAreaName/Views/ECCPBaseCommunities/Index.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://api.map.baidu.com/api?v=2.0&ak=nSRkLovUkrPf8Nxv8ESy0L83"></script>
}

<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("ECCPBaseCommunities")</span>
            </h3>
            <span class="m-section__sub">
                @L("ECCPBaseCommunitiesHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            @if (IsGranted(AppPermissions.Pages_EccpBase_EccpBaseCommunities_Create))
            {
                <button id="CreateNewECCPBaseCommunityButton" class="btn btn-primary blue">
                    <i class="fa fa-plus"></i> @L("CreateNewECCPBaseCommunity")
                </button>
            }
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right">
                <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input type="text" id="ECCPBaseCommunitiesTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetECCPBaseCommunitiesButton" class="btn btn-primary" type="submit">
                                        <i class="flaticon-search-1"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row m--margin-bottom-10">
                <div class="col-md-12">
                    <div class="m-separator m-separator--dashed"></div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="NameFilterId">@L("Name")</label>
                        <input type="text" class="form-control" name="nameFilter" id="NameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="AddressFilterId">@L("Addresse")</label>
                        <input type="text" class="form-control" name="addressFilter" id="AddressFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="LongitudeFilterId">@L("Longitude")</label>
                        <input type="text" class="form-control" name="longitudeFilter" id="LongitudeFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="LatitudeFilterId">@L("Latitude")</label>
                        <input type="text" class="form-control" name="latitudeFilter" id="LatitudeFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="ProvinceNameFilterId">(@L("Province")) @L("Name")</label>
                        <input type="text" class="form-control" name="provinceNameFilter" id="ProvinceNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="CityNameFilterId">(@L("City")) @L("Name")</label>
                        <input type="text" class="form-control" name="cityNameFilter" id="CityNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="DistrictNameFilterId">(@L("Area")) @L("Name")</label>
                        <input type="text" class="form-control" name="districtNameFilter" id="DistrictNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="StreetNameFilterId">(@L("Street")) @L("Name")</label>
                        <input type="text" class="form-control" name="streetNameFilter" id="StreetNameFilterId">
                    </div>
                </div>

            </div>
            <div class="row m--margin-bottom-10">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                        <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")
                    </span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                        <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")
                    </span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="ECCPBaseCommunitiesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("Name")</th>
                            <th>@L("Addresse")</th>
                            <th>@L("Longitude")</th>
                            <th>@L("Latitude")</th>
                            <th>@L("ProvinceName")</th>
                            <th>@L("CityName")</th>
                            <th>@L("AreaName")</th>
                            <th>@L("StreetName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>