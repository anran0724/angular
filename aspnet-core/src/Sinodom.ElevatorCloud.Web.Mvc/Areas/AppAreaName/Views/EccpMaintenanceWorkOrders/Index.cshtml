}

@section Scripts
    {
    <script abp-src="/view-resources/Areas/AppAreaName/Views/EccpMaintenanceWorkOrders/Index.js" asp-append-version="true"></script>
}

<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("EccpMaintenanceWorkOrders")</span>
            </h3>
            <span class="m-section__sub">
                @L("EccpMaintenanceWorkOrdersHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            @*@if (IsGranted(AppPermissions.Pages_EccpMaintenance_EccpMaintenanceWorkOrders_Create))
