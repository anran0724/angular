@using Sinodom.ElevatorCloud.ECCPBaseProductionCompanies
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.Common.Modals
@model Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.ECCPBaseProductionCompanies.CreateOrEditECCPBaseProductionCompanyViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? L("EditECCPBaseProductionCompany") : L("CreateNewECCPBaseProductionCompany")))

<div class="modal-body">
    <div id="ECCPBaseProductionCompanyInformationsTab">
        <form name="ECCPBaseProductionCompanyInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.EccpBaseProductionCompany.Id"/>
            }


            <div class="form-group m-form__group">
                <label for="ProvinceName">@L("Province")</label>
                <div class="input-group">
                    <input class="form-control" id="ProvinceName" name="provinceName" value="@Model.ProvinceName" type="text" disabled>
                    <div class="input-group-append">
                        <button class="btn btn-primary blue" id="OpenProvinceNameLookupTableButton" type="button" data-child="OpenCityNameLookupTableButton">
                            <i class="fa fa-search"></i> @L("Pick")</button>
                    </div>
                    <div class="input-group-prepend">
                        <button class="btn btn-danger" type="button" id="ClearProvinceNameButton" data-child="OpenCityNameLookupTableButton">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (Model.IsEditMode)
            {
                <input class="form-control" value="@Model.EccpBaseProductionCompany.ProvinceId" type="text" name="provinceId" hidden/>
            }
            else
            {
                <input class="form-control" value="" type="text" name="provinceId" hidden/>
            }


            <div class="form-group m-form__group">
                <label for="CityName">@L("City")</label>
                <div class="input-group">
                    <input class="form-control" id="CityName" name="cityName" value="@Model.CityName" type="text" disabled>
                    <div class="input-group-append">
                        <button class="btn btn-primary blue" id="OpenCityNameLookupTableButton" type="button" data-child="OpenDistrictNameLookupTableButton" @(Model.IsEditMode && Model.EccpBaseProductionCompany.ProvinceId.HasValue ? string.Empty : "disabled")>
                            <i class="fa fa-search"></i> @L("Pick")</button>
                    </div>
                    <div class="input-group-prepend">
                        <button class="btn btn-danger" type="button" id="ClearCityNameButton" data-child="OpenDistrictNameLookupTableButton">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (Model.IsEditMode)
            {
                <input class="form-control" value="@Model.EccpBaseProductionCompany.CityId" type="text" name="cityId" hidden/>
            }
            else
            {
                <input class="form-control" value="" type="text" name="cityId" hidden/>
            }


            <div class="form-group m-form__group">
                <label for="DistrictName">@L("Area")</label>
                <div class="input-group">
                    <input class="form-control" id="DistrictName" name="districtName" value="@Model.DistrictName" type="text" disabled>
                    <div class="input-group-append">
                        <button class="btn btn-primary blue" id="OpenDistrictNameLookupTableButton" type="button" data-child="OpenStreetNameLookupTableButton" @(Model.IsEditMode && Model.EccpBaseProductionCompany.CityId.HasValue ? string.Empty : "disabled")>
                            <i class="fa fa-search"></i> @L("Pick")</button>
                    </div>
                    <div class="input-group-prepend">
                        <button class="btn btn-danger" type="button" id="ClearDistrictNameButton" data-child="OpenStreetNameLookupTableButton">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (Model.IsEditMode)
            {
                <input class="form-control" value="@Model.EccpBaseProductionCompany.DistrictId" type="text" name="districtId" hidden/>
            }
            else
            {
                <input class="form-control" value="" type="text" name="districtId" hidden/>
            }


            <div class="form-group m-form__group">
                <label for="StreetName">@L("Street")</label>
                <div class="input-group">
                    <input class="form-control" id="StreetName" name="streetName" value="@Model.StreetName" type="text" disabled>
                    <div class="input-group-append">
                        <button class="btn btn-primary blue" id="OpenStreetNameLookupTableButton" type="button" @(Model.IsEditMode && Model.EccpBaseProductionCompany.DistrictId.HasValue ? string.Empty : "disabled")>
                            <i class="fa fa-search"></i> @L("Pick")</button>
                    </div>
                    <div class="input-group-prepend">
                        <button class="btn btn-danger" type="button" id="ClearStreetNameButton">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (Model.IsEditMode)
            {
                <input class="form-control" value="@Model.EccpBaseProductionCompany.StreetId" type="text" name="streetId" hidden/>
            }
            else
            {
                <input class="form-control" value="" type="text" name="streetId" hidden/>
            }


            <div class="form-group">
                <label for="ECCPBaseProductionCompany_Name">@L("Name")</label>
                <input class="form-control" id="ECCPBaseProductionCompany_Name" value="@Model.EccpBaseProductionCompany.Name" type="text" name="name" required maxlength="@ECCPBaseProductionCompanyConsts.MaxNameLength" minlength="@ECCPBaseProductionCompanyConsts.MinNameLength"/>
            </div>

            <div class="form-group">
                <label for="ECCPBaseProductionCompany_Addresse">@L("Addresse")</label>
                <input class="form-control" id="ECCPBaseProductionCompany_Addresse" value="@Model.EccpBaseProductionCompany.Addresse" type="text" name="addresse" required maxlength="@ECCPBaseProductionCompanyConsts.MaxAddresseLength" minlength="@ECCPBaseProductionCompanyConsts.MinAddresseLength"/>
            </div>

            <div class="form-group">
                <label for="ECCPBaseProductionCompany_Telephone">@L("Telephone")</label>
                <input class="form-control" id="ECCPBaseProductionCompany_Telephone" value="@Model.EccpBaseProductionCompany.Telephone" type="text" name="telephone" required maxlength="@ECCPBaseProductionCompanyConsts.MaxTelephoneLength" minlength="@ECCPBaseProductionCompanyConsts.MinTelephoneLength"/>
            </div>

            <div class="form-group">
                <label for="ECCPBaseProductionCompany_Summary">@L("Summary")</label>
                <input class="form-control" id="ECCPBaseProductionCompany_Summary" value="@Model.EccpBaseProductionCompany.Summary" type="text" name="summary"/>
            </div>


        </form>
    </div>
</div>

@(await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml"))