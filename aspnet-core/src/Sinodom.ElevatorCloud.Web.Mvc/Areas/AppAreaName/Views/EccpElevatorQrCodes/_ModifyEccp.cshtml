@using Sinodom.ElevatorCloud.EccpElevatorQrCodes
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.Common.Modals
@model Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.EccpElevatorQrCodes.CreateOrEditEccpElevatorQrCodeViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? L("ModifyEccp") : L("CreateNewEccpElevatorQrCode")))

<div class="modal-body">
    <div id="EccpElevatorQrCodeInformationsTab">
        <form name="EccpElevatorQrCodeInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.EccpElevatorQrCode.Id"/>
            }
            <div class="form-group">
                <label for="EccpElevatorQrCode_AreaName">@L("AreaName")</label>
                <input class="form-control" id="EccpElevatorQrCode_AreaName" value="@Model.EccpElevatorQrCode.AreaName" disabled="disabled" type="text" name="areaName" required maxlength="@EccpElevatorQrCodeConsts.MaxAreaNameLength" minlength="@EccpElevatorQrCodeConsts.MinAreaNameLength"/>
            </div>

            <div class="form-group">
                <label for="EccpElevatorQrCode_ElevatorNum">@L("ElevatorNum")</label>
                <input class="form-control" id="EccpElevatorQrCode_ElevatorNum" value="@Model.EccpElevatorQrCode.ElevatorNum" disabled="disabled" type="text" name="elevatorNum" required maxlength="@EccpElevatorQrCodeConsts.MaxElevatorNumLength" minlength="@EccpElevatorQrCodeConsts.MinElevatorNumLength"/>
            </div>


            <div class="form-group m-form__group">
                <label for="EccpBaseElevatorName">@L("EccpBaseElevator")</label>
                <div class="input-group">
                    <input class="form-control" id="EccpBaseElevatorName" name="eccpBaseElevatorName" value="@Model.EccpBaseElevatorName" type="text" disabled>
                    <div class="input-group-append">
                        <button class="btn btn-primary blue" id="OpenEccpBaseElevatorLookupTableButton" type="button">
                            <i class="fa fa-search"></i> @L("Pick")</button>
                    </div>
                    <div class="input-group-prepend">
                        <button class="btn btn-danger" type="button" id="ClearEccpBaseElevatorNameButton">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (Model.IsEditMode)
            {
                <input class="form-control" value="@Model.EccpElevatorQrCode.ElevatorId" type="text" name="elevatorId" required hidden/>
            }
            else
            {
                <input class="form-control" value="" type="text" name="elevatorId" required hidden/>
            }




        </form>
    </div>
</div>

@(await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml"))