@using Sinodom.ElevatorCloud.EccpElevatorQrCodes
@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.Common.Modals
@model Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.EccpElevatorQrCodes.CreateOrEditEccpElevatorQrCodeViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? L("ModifyQRCode") : L("CreateNewEccpElevatorQrCode")))

<div class="modal-body">
    <div id="EccpElevatorQrCodeInformationsTab">
        <form name="EccpElevatorQrCodeInformationsForm" role="form" novalidate class="form-validation">

            <div class="form-group m-form__group">
                <label for="EccpBaseElevatorName">@L("EccpBaseElevator")</label>
                <div class="input-group">
                    <input class="form-control" id="EccpBaseElevatorName" name="eccpBaseElevatorName" value="@Model.EccpBaseElevatorName" disabled="disabled" type="text" disabled>
                </div>
                <label for="EccpBaseElevatorName">@L("EccpBaseElevator")</label>
                <div class="input-group">
                    <input class="form-control" id="EccpBaseElevatorCertificateNum" name="eccpBaseElevatorCertificateNum" value="@Model.EccpBaseElevatorCertificateNum" disabled="disabled" type="text" disabled>
                </div>
            </div>
            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.EccpElevatorQrCode.Id"/>
            }
            <div class="form-group">
                <label for="EccpElevatorQrCode_AreaName">@L("AreaName")</label>
                <input class="form-control" id="EccpElevatorQrCode_AreaName" value="@Model.EccpElevatorQrCode.AreaName" type="text" name="areaName" required maxlength="@EccpElevatorQrCodeConsts.MaxAreaNameLength" minlength="@EccpElevatorQrCodeConsts.MinAreaNameLength"/>
            </div>

            <div class="form-group">
                <label for="EccpElevatorQrCode_ElevatorNum">@L("ElevatorNum")</label>
                <input class="form-control" id="EccpElevatorQrCode_ElevatorNum" value="@Model.EccpElevatorQrCode.ElevatorNum" type="text" name="elevatorNum" required maxlength="@EccpElevatorQrCodeConsts.MaxElevatorNumLength" minlength="@EccpElevatorQrCodeConsts.MinElevatorNumLength"/>
            </div>


            @if (Model.IsEditMode)
            {
                <input class="form-control" value="@Model.EccpElevatorQrCode.ElevatorId" type="text" name="elevatorId" required hidden/>
            }
            else
            {
                <input class="form-control" value="" type="text" name="elevatorId" required hidden/>
            }




        </form>
    </div>
</div>

@(await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml"))