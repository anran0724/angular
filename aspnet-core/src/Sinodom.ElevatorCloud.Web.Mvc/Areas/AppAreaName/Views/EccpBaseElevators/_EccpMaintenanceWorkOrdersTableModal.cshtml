@using Sinodom.ElevatorCloud.Web.Areas.AppAreaName.Models.Common.Modals

@section Scripts
    {
    <script abp-src="/view-resources/Areas/AppAreaName/Views/EccpBaseElevators/_EccpMaintenanceWorkOrdersTableModal.js" asp-append-version="true"></script>
}

@(await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(string.Empty)))

<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right">
                <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input type="text" id="EccpMaintenanceWorkOrdersTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")">
                                <span class="input-group-btn">
                                    <button id="GetEccpMaintenanceWorkOrdersButton" class="btn btn-primary" type="submit">
                                        <i class="flaticon-search-1"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                        
            <div class="row align-items-center">
                <table id="EccpMaintenanceWorkOrdersTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("IsPassed")</th>
                            <th>@L("Longitude")</th>
                            <th>@L("Latitude")</th>
                            <th>@L("PlanCheckDate")</th>
                            <th>@L("EccpMaintenancePlanPollingPeriod")</th>
                            <th>@L("EccpDictMaintenanceTypeName")</th>
                            <th>@L("EccpDictMaintenanceStatusName")</th>
                            <th>@L("EccpElevatorName")</th>
                            <th>@L("EccpMaintenanceUserNameList")</th>
                            <th>@L("EccpPropertyUserNameList")</th>
                            <th>@L("IsClose")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@(await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithClose.cshtml"))